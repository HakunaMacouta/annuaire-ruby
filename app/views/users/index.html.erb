<h2>
  Liste des Users
</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th>Birthdate</th>
    <th>Photo</th>
  </tr>
  </thead>
  <tbody>
  <%- @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user_path(user) %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.email %></td>
      <td><%= user.date_of_birth %></td>
      <td>
        <ul>
          <% if user.photos
               user.photos.each do |photo| %>
          <li><%= photo.name %></li>
          <% end end %>
        </ul>

      </td>
      <td><%= link_to "delete", user_path(user), method: :delete, confirm: "nrv ?" %></td>
    </tr>
  <%- end %>
  </tbody>

  <div><%= link_to 'New user',new_user_path %></div>
</table>

